<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/paleSky</item>
        <item name="colorPrimaryVariant">@color/mineShaft</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dodgerBlue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>kotlin
        <!-- Customize your theme here. -->
    </style>

    <style name="MyBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/paleSky</item>
        <item name="itemIconTint">@color/mineShaft</item>
        <item name="itemTextColor">@color/dodgerBlue</item>
    </style>
</resources>